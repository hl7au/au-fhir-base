<?xml version="1.0" encoding="UTF-8"?>
<Patient xmlns="http://hl7.org/fhir">

    <id value="addressAustralianNoFixedAddressexample6"/>

    <text>
        <status value="additional"/>
        <div xmlns="http://www.w3.org/1999/xhtml">
            <p>This example demonstrates how an address within Australia can be represented as a 'no fixed address'.</p>
        </div>
    </text>
    
    <address>
        <extension url="http://hl7.org.au/fhir/StructureDefinition/no-fixed-address">
            <valueBoolean value="true"/>
            <!-- this part of the extension states that address is no fixed address -->
        </extension>
        <use value="temp"/>
        <type value="physical"/>
        <text value="NO FIXED ADDRESS Melbourne, VIC 3000"/>
        <state value="VIC" />
        <country value="AU"/>
        <period>
            <start value="2017-06-08T10:57:34+01:00"/>
        </period>
    </address>
</Patient>
