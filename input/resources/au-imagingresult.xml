<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <id value="au-imagingresult" />
  <extension url="http://hl7.org/fhir/StructureDefinition/structuredefinition-fmm">
    <valueInteger value="1"/> 
  </extension>
  <url value="http://hl7.org.au/fhir/StructureDefinition/au-imagingresult" />
  <name value="AUBaseDiagnosticImagingResult" />
  <title value="AU Base Diagnostic Imaging Result" />
  <status value="active" />
  <description value="This profile defines an observation structure to represent a imaging examination result issued by a diagnostic service provider in an Australian context. The observation may represent the conclusions of a diagnostic procedure such as chest X-ray, or it may group the set of results produced by a multi-modality procedure." />
  <kind value="resource" />
  <abstract value="false" />
  <type value="Observation" />
  <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Observation" />
  <derivation value="constraint" />
  <differential>
    <element id="Observation">
      <path value="Observation" />
      <short value="A imaging examination result in an Australian healthcare context" />
      <definition value="A diagnostic imaging examination result for a patient. This observation may be a simple examination or a study series." />
      <constraint>
        <key value="inv-obs-0" />
        <severity value="error" />
        <human value="An imaging result shall at least have value or data absent reason or a child observation with a value or data absent reason" />
        <expression value="value.exists() or dataAbsentReason.exists() or hasMember.exists() or component.value.exists() or component.dataAbsentReason.exists()" />
      </constraint>
      <constraint>
        <key value="inv-obs-1" />
        <severity value="error" />
        <human value="bodySite extension shall only be present if Observation.bodySite is not present" />
        <expression value="bodySite.exists() implies extension('http://hl7.org/fhir/StructureDefinition/bodySite').empty()"/>
      </constraint>
    </element>
    <element id="Observation.extension">
      <path value="Observation.extension" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="url" />
        </discriminator>
        <rules value="open" />
      </slicing>
    </element>
    <element id="Observation.extension:bodyStructure">
      <path value="Observation.extension" />
      <sliceName value="bodyStructure" />
      <type>
        <code value="Extension" />
        <profile value="http://hl7.org/fhir/StructureDefinition/bodySite" />
      </type>
      <condition value="inv-obs-1"/>
    </element>
    <element id="Observation.category">
      <path value="Observation.category"/>
      <slicing>
        <discriminator>
          <type value="value"/>
          <path value="coding.system"/>
        </discriminator>
        <discriminator>
          <type value="value"/>
          <path value="coding.code"/>
        </discriminator>
        <rules value="open"/>
      </slicing>
      <short value="Relevant diagnostic imaging category: service, modality and anatomic region"/>
      <comment value="A category denoting diagnostic imaging service identifies the type of report and supports macro handling of requests is required. A second category to provide the modality should be provided where possible; a value set to support this categorisation is not yet available. A third category to provide the anatomic region of interest should be provided where possible."/>
      <min value="1"/>
    </element>
    <element id="Observation.category:diagImg">
      <path value="Observation.category"/>
      <sliceName value="diagImg"/>
      <short value="Observation generated by imaging"/>
      <min value="1"/>
      <max value="1"/>
    </element>
    <element id="Observation.category:diagImg.coding">
      <path value="Observation.category.coding"/>
      <min value="1"/>
    </element>
    <element id="Observation.category:diagImg.coding.system">
      <path value="Observation.category.coding.system"/>
      <min value="1"/>
      <fixedUri value="http://terminology.hl7.org/CodeSystem/observation-category"/>
    </element>
    <element id="Observation.category:diagImg.coding.code">
      <path value="Observation.category.coding.code" />
      <min value="1" />
      <fixedCode value="imaging" />
    </element>
    <element id="Observation.category:anatomicRegionOfInterest">
      <path value="Observation.category"/>
      <sliceName value="anatomicRegionOfInterest"/>
      <short value="Anatomic Region Of Interest"/>
      <binding>
        <strength value="extensible"/>
        <valueSet value="https://healthterminologies.gov.au/fhir/ValueSet/imaging-anatomic-region-of-interest-1"/>
      </binding>
    </element>
    <element id="Observation.category:anatomicRegionOfInterest.coding.system">
      <path value="Observation.category.coding.system"/>
      <min value="1"/>
      <fixedUri value="http://snomed.info/sct"/>
    </element>
    <element id="Observation.code">
      <path value="Observation.code" />
      <short value="Diagnostic imaging examination or study" />
      <binding>
        <strength value="preferred" />
        <valueSet value="https://healthterminologies.gov.au/fhir/ValueSet/imaging-procedure-1" />
      </binding>
    </element>
    <element id="Observation.subject">
      <path value="Observation.subject" />
      <min value="1" />
      <type>
        <code value="Reference" />
        <targetProfile value="http://hl7.org/fhir/StructureDefinition/Patient" />
      </type>
    </element>
    <element id="Observation.effective[x]">
      <path value="Observation.effective[x]" />
      <short value="Time of diagnostic imaging examination" />
      <min value="1" />
      <type>
        <code value="dateTime" />
      </type>
      <type>
        <code value="Period" />
      </type>
    </element>
    <element id="Observation.value[x]">
      <path value="Observation.value[x]" />
      <condition value="inv-obs-0"/>
    </element>
    <element id="Observation.dataAbsentReason">
      <path value="Observation.dataAbsentReason" />
      <condition value="inv-obs-0"/>
    </element>
    <element id="Observation.bodySite">
      <path value="Observation.bodySite" />
      <binding>
        <strength value="preferred" />
        <valueSet value="https://healthterminologies.gov.au/fhir/ValueSet/body-site-1" />
      </binding>
      <condition value="inv-obs-1"/>
    </element>
    <element id="Observation.hasMember">
      <path value="Observation.hasMember" />
      <short value="Individual examinations in a group or study series" />
      <type>
        <code value="Reference" />
        <targetProfile value="http://hl7.org.au/fhir/StructureDefinition/au-diagnosticresult" />
        <targetProfile value="http://hl7.org.au/fhir/StructureDefinition/au-imagingresult" />
      </type>
      <condition value="inv-obs-0"/>
    </element>
    <element id="Observation.component">
      <path value="Observation.component" />
      <short value="Individual examinations in a group or study series" />
    </element>
    <element id="Observation.component.code">
      <path value="Observation.component.code" />
      <short value="Diagnostic imaging examination or study" />
      <binding>
        <strength value="preferred" />
        <valueSet value="https://healthterminologies.gov.au/fhir/ValueSet/imaging-procedure-1" />
      </binding>
    </element>
    <element id="Observation.component.value[x]">
      <path value="Observation.component.value[x]" />
      <condition value="inv-obs-0"/>
    </element>
    <element id="Observation.component.dataAbsentReason">
      <path value="Observation.component.dataAbsentReason" />
      <condition value="inv-obs-0"/>
    </element>
  </differential>
</StructureDefinition>