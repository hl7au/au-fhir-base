  <differential>
    <element id="Observation">
      <path value="Observation"/>
      <short value="Blood pressure"/>
      <definition value="Blood pressure (BP) observation using a standard LOINC code, a SNOMED CT code and UCUM unit of measure. It has no value in Observation.valueQuantity but contains two components, one for systolic BP and the other for diastolic BP."/>
    </element>
    <element id="Observation.status">
      <path value="Observation.status" />
      <fixedCode value="final" />
    </element>
    <element id="Observation.code.coding">
      <path value="Observation.code.coding" />
      <min value="2" />
    </element>
    <element id="Observation.code.coding:snomedBPCode">
      <path value="Observation.code.coding" />
      <sliceName value="snomedBPCode" />
